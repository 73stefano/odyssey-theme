---
import { Container } from '@littlesticks/odyssey-theme-components';
---

<Container>
	<section class="three-col-photo__section">
		<div class="three-col-photo__column">
			<slot name="column-1-photo" />
			<!-- <slot name="column-1-cta" /> -->
		</div>
		<div class="three-col-photo__column">
			<slot name="column-2-photo" />
			<!-- <slot name="column-2-cta" /> -->
		</div>
		<div class="three-col-photo__column">
			<slot name="column-3-photo" />
			<!-- <slot name="column-3-cta" /> -->
		</div>
	</section>
</Container>

<style>
	.three-col-photo__section {
		--column-count: 3;
		--column-width: calc(100% / var(--column-count));
		margin: var(--section-margin) auto;
		display: flex;
		flex-wrap: wrap;
		text-align: center;
		justify-content: space-evenly;
	}
	.three-col-photo__column {
		width: var(--column-width);
		/* margin-bottom: 2rem; */
		padding: 1rem;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	@media (max-width: 1200px) {
		.three-col-photo__section {
			--column-count: 2;
		}
	}
	@media (max-width: 768px) {
		.three-col-photo__section {
			--column-count: 1;
		}
	}
</style>
